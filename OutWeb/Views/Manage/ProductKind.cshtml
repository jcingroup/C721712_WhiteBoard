
@{
    Layout = "~/Views/Shared/_MLayout.cshtml";
    ViewBag.Crumb = "產品分類維護";
    ViewBag.subnav = "Products";
    ViewBag.subnav2 = "ProductKind";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li>產品管理 &#10095;</li>
        <li>@ViewBag.Crumb</li>
    </ul>
}

<h3 class="title">@ViewBag.Crumb</h3>

<div class="alert-warning mb-16">
    <strong>前台排序：</strong> 數字愈大愈前面。<br>
    <strong>刪除：</strong> @* 這裡要說明刪除規則 *@
</div>

<div class="topBtn-bar btn-group">
    <button class="btn success oi" data-glyph="plus">新增</button>
</div>

<header class="table-head form-inline">
    <label>狀態</label>
    <select>
        <option>全部</option>
        <option>使用</option>
        <option>停用</option>
    </select>
    <input type="text" placeholder="請輸入關鍵字">
    <button class="btn">搜尋</button>
</header>

<table class="table-list table-hover table-striped">
    <colgroup>
        <col span="3">
        <col span="2" style="width: 13%">
    </colgroup>
    <tr>
        @* 點選排序功能 (點一下遞增, 點兩下遞減)
           <button class="th-sort-toggle"></button>
           遞增 asc
           <button class="th-sort-toggle asc"></button>
           遞減 desc
           <button class="th-sort-toggle desc"></button>
        *@
        <th class="item-edit">刪除</th>
        <th class="item-edit">修改</th>
        <th class="text-left">
            <button class="th-sort-toggle">分類名稱</button>
        </th>
        <th>
            <button class="th-sort-toggle asc">狀態</button>
        </th>
        <th>
            <button class="th-sort-toggle desc">前台排序</button>
        </th>
    </tr>
    <tr>
        <td>
            <button class="hover-danger oi" title="刪除" data-glyph="trash"></button>
        </td>
        <td>
            <button class="hover-primary oi" title="修改" data-glyph="pencil"></button>
        </td>
        <td class="text-left">TEXT</td>
        <td>
            <span class="label-success">使用</span>
            @* <span class="label">停用</span> *@
        </td>
        <td>10</td>
    </tr>

    @* 點選編輯鈕時: 編輯狀態，其他的button就不能點選
       <button class="hover-danger oi" title="刪除" data-glyph="trash" disabled></button>
       <button class="hover-primary oi" title="修改" data-glyph="pencil" disabled></button>
    *@
    <tr>
        <td>
            <button class="hover-warning oi" title="取消" data-glyph="x"></button>
        </td>
        <td>
            <button class="hover-success oi" title="確定" data-glyph="check"></button>
        </td>
        <td class="text-left">
            <input type="text" value="TEXT" required>
        </td>
        <td>
            @* 使用 + checked *@
            <label class="switch">
                <input type="checkbox" checked>
                <div class="slider round"></div>
            </label>
        </td>
        <td>
            <input type="number" class="text-center" value="0" required>
        </td>
    </tr>

    @* 點選新增鈕時: 編輯狀態，其他的button就不能點選
       <button class="hover-danger oi" title="刪除" data-glyph="trash" disabled></button>
       <button class="hover-primary oi" title="修改" data-glyph="pencil" disabled></button>
    *@
    <tr>
        <td>
            <button class="hover-warning oi" title="取消" data-glyph="x"></button>
        </td>
        <td>
            <button class="hover-success oi" title="確定" data-glyph="check"></button>
        </td>
        <td class="text-left">
            <input type="text" placeholder="請輸入分類名稱" required>
        </td>
        <td>
            @* 使用 + checked *@
            <label class="switch">
                <input type="checkbox" checked>
                <div class="slider round"></div>
            </label>
        </td>
        <td>
            <input type="number" class="text-center" value="0" required>
        </td>
    </tr>
</table>
<footer class="table-foot">
    <small class="pull-right">第 1-1 筆，共 1 筆</small>
    <nav class="pager">
        <a href="" class="oi" data-glyph="media-step-backward" title="到最前頁"></a>
        <a href="" class="oi" data-glyph="chevron-left" title="上一頁"></a>
        <span>
            第
            <input type="number" min="1" value="1">
            頁，共 1 頁
        </span>
        <a href="" class="oi" data-glyph="chevron-right" title="下一頁"></a>
        <a href="" class="oi" data-glyph="media-step-forward" title="到最後頁"></a>
    </nav>
</footer>